# https://EditorConfig.org

root = true

[*]
indent_style = space
# Reduce tab size on GitHub
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.yml]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_size = 2
